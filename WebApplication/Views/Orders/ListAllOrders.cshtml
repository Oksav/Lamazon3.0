@model IEnumerable<OrderViewModel>

    <div class="ListAllOrders">

        <div class="mt-3">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr> 
                            <th>Order ID</th>
                            <th>User</th>
                            <th>Date Created</th>
                            <th>Status</th>
                            <th>Price</th>
                            <th>Products</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                        <tr>
                            
                            <td><a asp-controller="Orders" asp-action="OrderDetails" asp-route-productId="@order.OrderId"><b>@order.OrderId</b></a></td>
                            <td>@order.User.FullName</td>
                            <td>@order.DateCreated</td>
                            <td>@order.Status</td>
                            <td>@order.Price</td>

                            <td>
                                @foreach (var product in order.Products)
                                {
                                    <span>@product.Name, </span>
                                }
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>






    </div>

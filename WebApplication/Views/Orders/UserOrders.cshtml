@model  IEnumerable<OrderViewModel>





    <div class="userProducts">

        <div class="mt-3">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Price</th>
                            <th>Products</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                        <tr>
                            <td>@order.Status</td>
                            <td>@order.Price</td>
                            @foreach (var product in order.Products)
                            {
                                <td><span>@product.Name</span></td> //voa seuste ne e vo upotreba oti imme prazni list od orders
;
                            }
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>






    </div>
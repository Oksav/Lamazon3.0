@model  OrderViewModel



    <div class="userProducts">
        @if (Model.Products.Count == 0)
        {
            <h2>You have no products in your cart!</h2>
        }
        else
        {

            <div class="mt-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Product</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td><a asp-controller="Orders" title="Remove Product" asp-action="DeleteProduct" asp-route-productId=@product.ProductId><b>X</b></a></td>
                                    <td>@product.Name</td>
                                    <td>@product.Price $</td>
                                </tr>
                            }
                            <tr>
                                <td></td>
                                <td><h4><b>Total Price:</b></h4></td>
                                <td><h4><b>@Model.Price $</b></h4></td>

                            </tr>

                        </tbody>

                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                @if (Model.Products.Count > 0)
                                {
                                    <td><a asp-controller="Orders" asp-action="PayNow" asp-route-orderId="@Model.OrderId"><input type="button" class="btn btn-primary" value="Pay Now" /></a></td>
                                }
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        }
    </div>
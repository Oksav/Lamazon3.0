@model IEnumerable<ProductViewModel>;

@{
    ViewBag.Title = "Modify Product List";
}

<h1>Modify Product List</h1>

<div class="allProducts">

    <div class="mt-3">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                        <tr>
                            <td class="image">
                                @if (product.PhotoPath != null)
                                {
                                    <img class="image" src="~/images/products/@product.PhotoPath" alt="@product.Name" asp-append-version="true" width="150" height="150" />
                                }
                                else
                                {
                                    <img class="image" src="https://img-a.udemycdn.com/course/750x422/147028_d030_9.jpg" alt="..." asp-append-version="true" width="150" height="150">
                                }
                                
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Category</td>
                            <td>@product.Quantity</td>
                            <td>@product.Price $</td>
                            <td><a asp-controller="Products" asp-action="UpdateProduct" asp-route-id=@product.ProductId><input type="button" class="btn btn-primary" value="Update Product" /></a></td>
                            <td><a asp-controller="Products" asp-action="DeleteProduct" asp-route-id=@product.ProductId><input type="button" class="btn btn-danger" value="Delete Product" /></a></td>

                        </tr>
                        }

                    </tbody>
                </table>
            </div>
    </div>

</div>


